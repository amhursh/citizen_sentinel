<div class="bills">
  <h1>Bills You Follow</h1>
  <% @bills.each do |bill| %>
  <table>
    <thead>
      <tr>
        <th>Bill ID</th>
        <th>Title</th>
        <th>Subject</th>
        <th>Active?</th>
        <th>Enacted?</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <tr id="bill-<%= bill.id %>">
        <td><%= bill.bill_id %></td>
        <td><%= bill.title %></td>
        <td><%= bill.subject %></td>
        <td><%= bill.active.to_s %></td>
        <td><%= bill.enacted.to_s %></td>
        <td><%= link_to "View Bill", users_bill_path(bill_id: bill.id) %></td>
        <td><%= link_to "Unfollow", bill_unfollows_path(bill_id: bill.id), method: :delete %></td>
      </tr>
    </tbody>
  </table> 
  <% end %>
</div>