<div class="column is-10 is-offset-1">
  <div class="level">
    <h1 class="level-item has-text-centered is-size-1">
      Recent Activity for Issue: <%= @issue.name %>
    </h1>
  </div>


  <% @bills_by_issue.each do |issue_bill| %>
  <article class="media bill">
    <div class="media-content">
      <div class="content">
        <p class="title">
          <strong class="bill_number"><%= issue_bill.bill_id %></strong> <small class="committees"> - <%= issue_bill.committees %></small> 
        </p>
        <p>
          <small><%= issue_bill.title %></small>
        </p>
        <p class="last_major_action">
          <small class="last_action_date"><%= issue_bill.last_action_date %></small>
          <small> - <%= issue_bill.last_major_action %></small>
        </p>
      </div>
      <nav class="level is-mobile">
        
      </nav>
    </div>
    <div class="media-right">
      <% if user_has_issue_bill?(@user, issue_bill) %>
        <div class="media-right followed-bill">
          <a class="button is-link" title="Disabled button" disabled>Following</a>
        </div>
      <% else %>
        <div class="level-left">
          <%= link_to "Follow this Bill", bill_follows_path(bill_ref: issue_bill.bill_ref), method: :post, class: 'button is-link is-outlined'  %>
        </div>
      <% end %>
    </div>
  </article>
  <% end %>
</div>