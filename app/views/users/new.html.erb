<% form_for @user do |f| -%>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %>

  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>

  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Password _Confirmation" %>
  <%= f.password_field :password_confirmation %>
<% end -%>